{
  "name": "UserCard",
  "type": "component",
  "description": "Card displaying user profile information",
  "design_tokens": {
    "spacing": {
      "padding": "16px",
      "gap": "12px"
    },
    "colors": {
      "background": "#ffffff",
      "text_primary": "#1a1a1a",
      "text_secondary": "#666666",
      "border": "#e0e0e0"
    },
    "typography": {
      "name_size": "18px",
      "name_weight": "600",
      "email_size": "14px",
      "email_weight": "400"
    },
    "border_radius": "8px"
  },
  "structure": {
    "container": {
      "type": "div",
      "layout": "flex",
      "direction": "row",
      "align": "center",
      "children": ["avatar", "info"]
    },
    "avatar": {
      "type": "img",
      "size": "48px",
      "shape": "circle"
    },
    "info": {
      "type": "div",
      "layout": "flex",
      "direction": "column",
      "children": ["name", "email"]
    },
    "name": {
      "type": "span",
      "style": "name"
    },
    "email": {
      "type": "span",
      "style": "email"
    }
  },
  "accessibility": {
    "role": "article",
    "aria_label": "User profile card"
  }
}
