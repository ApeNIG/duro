{
  "id": "tournament_design",
  "name": "Tournament Design System",
  "version": "2.0",
  "tier": "core",
  "created": "2026-02-15",
  "updated": "2026-02-15",
  "description": "Tournament-style design workflow: two brackets each produce a finalist, finalists compete for champion. Duro learns which approaches win for which project types.",
  "triggers": [
    "design",
    "mockup",
    "UI",
    "UX",
    "new screen",
    "new page",
    "new component",
    "dashboard design",
    "landing page"
  ],
  "tournament_structure": {
    "bracket_a": {
      "name": "Energetic",
      "philosophy": "Motion, color, personality, emotional engagement",
      "directions": ["playful_sports", "bold_vibrant"]
    },
    "bracket_b": {
      "name": "Refined",
      "philosophy": "Structure, clarity, sophistication, functional elegance",
      "directions": ["minimal_clean", "dark_premium"]
    }
  },
  "workflow": {
    "phase_1_bracket_a": {
      "name": "Bracket A: Energetic",
      "steps": [
        "Create Direction A1 (e.g., playful_sports)",
        "Create Direction A2 (e.g., bold_vibrant)",
        "Evaluate both on 8 criteria",
        "Produce Finalist 1 (winner or blend)"
      ]
    },
    "phase_2_bracket_b": {
      "name": "Bracket B: Refined",
      "steps": [
        "Create Direction B1 (e.g., minimal_clean)",
        "Create Direction B2 (e.g., dark_premium)",
        "Evaluate both on 8 criteria",
        "Produce Finalist 2 (winner or blend)"
      ]
    },
    "phase_3_finals": {
      "name": "Championship Round",
      "steps": [
        "Compare Finalist 1 vs Finalist 2",
        "Evaluate on same 8 criteria",
        "If within 15%, blend into Champion",
        "If clear winner, that becomes Champion"
      ]
    },
    "phase_4_learn": {
      "name": "Learn & Log",
      "steps": [
        "Log which bracket won for this project type",
        "Track criteria that predicted winner",
        "Store blend ratios if applicable",
        "Update bracket success rates in Duro"
      ]
    }
  },
  "evaluation_criteria": [
    {"name": "visual_clarity", "weight": 1.5, "description": "How clear and readable is the design?"},
    {"name": "hierarchy", "weight": 1.2, "description": "Is visual hierarchy well established?"},
    {"name": "user_flow", "weight": 1.5, "description": "How intuitive is the user journey?"},
    {"name": "brand_alignment", "weight": 1.0, "description": "Does it match brand/project identity?"},
    {"name": "technical_feasibility", "weight": 1.3, "description": "Can this be implemented cleanly?"},
    {"name": "consistency", "weight": 1.1, "description": "Are elements consistent throughout?"},
    {"name": "accessibility", "weight": 1.0, "description": "Is it accessible (contrast, sizing)?"},
    {"name": "mobile_responsiveness", "weight": 1.2, "description": "Will it work on mobile?"}
  ],
  "direction_templates": {
    "playful_sports": {
      "style": "Dynamic angles, athletic colors, achievement focus",
      "bracket": "energetic",
      "best_for": ["fitness", "sports", "health", "gaming"]
    },
    "bold_vibrant": {
      "style": "Strong colors, gradients, playful elements",
      "bracket": "energetic",
      "best_for": ["consumer", "marketing", "creative", "entertainment"]
    },
    "minimal_clean": {
      "style": "Minimal, lots of whitespace, single accent color",
      "bracket": "refined",
      "best_for": ["saas", "productivity", "professional", "enterprise"]
    },
    "dark_premium": {
      "style": "Dark backgrounds, metallic accents, sophisticated",
      "bracket": "refined",
      "best_for": ["fintech", "gaming", "luxury", "tech"]
    }
  },
  "project_type_brackets": {
    "sports_tracker": {
      "bracket_a": ["playful_sports", "bold_vibrant"],
      "bracket_b": ["minimal_clean", "dark_premium"],
      "weights": {
        "visual_clarity": 1.6,
        "user_flow": 1.5,
        "mobile_responsiveness": 1.8,
        "accessibility": 1.2
      }
    },
    "saas_dashboard": {
      "bracket_a": ["bold_vibrant", "playful_sports"],
      "bracket_b": ["minimal_clean", "dark_premium"],
      "weights": {
        "visual_clarity": 1.8,
        "hierarchy": 1.5,
        "user_flow": 1.5,
        "technical_feasibility": 1.3
      }
    },
    "landing_page": {
      "bracket_a": ["bold_vibrant", "playful_sports"],
      "bracket_b": ["minimal_clean", "dark_premium"],
      "weights": {
        "brand_alignment": 1.8,
        "mobile_responsiveness": 1.5,
        "hierarchy": 1.3
      }
    },
    "mobile_app": {
      "bracket_a": ["playful_sports", "bold_vibrant"],
      "bracket_b": ["minimal_clean", "dark_premium"],
      "weights": {
        "user_flow": 1.8,
        "mobile_responsiveness": 2.0,
        "accessibility": 1.5
      }
    }
  },
  "learning_metrics": {
    "track_per_project_type": [
      "bracket_win_rate",
      "direction_win_rate",
      "blend_frequency",
      "criteria_correlation_with_wins"
    ],
    "track_per_direction": [
      "times_selected",
      "times_won_bracket",
      "times_reached_finals",
      "times_became_champion",
      "average_score"
    ]
  },
  "requires_approval": false,
  "outputs": {
    "champion_mockup_id": "ID of the tournament champion design",
    "finalist_1_id": "ID of Bracket A finalist",
    "finalist_2_id": "ID of Bracket B finalist",
    "tournament_decision": "Duro decision artifact with full tournament results",
    "learning_artifact": "Duro fact artifact tracking bracket/direction performance"
  },
  "source_file": "dual_direction_design.py"
}
